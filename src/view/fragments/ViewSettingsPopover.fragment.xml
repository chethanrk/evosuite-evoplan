<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <Popover title="View Settings"
             class="sapUiPopupWithPadding"
             placement="Top">
        <content>
            <RadioButtonGroup>
                <buttons>
                    <RadioButton id="Daily" text="Daily"/>
                    <RadioButton id="Weekly" text="Weekly"/>
                    <RadioButton id="Monthly" text="Monthly"/>
                    <RadioButton id="Simple" text="Simple"/>
                </buttons>
            </RadioButtonGroup>
        </content>
        <footer>
            <Toolbar>
                <ToolbarSpacer/>
                <Button text="Ok" press="onViewSettingsOkButtonPress" />
            </Toolbar>
        </footer>
    </Popover>
</core:FragmentDefinition>