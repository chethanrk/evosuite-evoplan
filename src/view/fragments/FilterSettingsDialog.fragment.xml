<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:l="sap.ui.layout"
        xmlns:vm="sap.ui.comp.variants">

    <ViewSettingsDialog title="Filter" confirm="onFilterSettingsConfirm">
        <filterItems>
            <ViewSettingsFilterItem
                    text="{i18n>xtit.filterTitleView}"
                    key="View"
                    multiSelect="false">
                <items>
                    <ViewSettingsItem text="Daily" key="Daily" />
                    <ViewSettingsItem text="Weekly" key="Weekly" />
                    <ViewSettingsItem text="Monthly" key="Monthly" />
                    <ViewSettingsItem text="Simple" key="Simple" />
                </items>
            </ViewSettingsFilterItem>
            <ViewSettingsCustomItem
                    id="idCustomFilterItem"
                    text="{i18n>xtit.filterTitleGroup}"
                    key="ResourceGroup">
                <customControl>
                    <MultiInput id="multiInput"
                                showValueHelp="true"
                                width="90%"
                                class="sapUiSmallMargin">
                    </MultiInput>
                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>

</core:FragmentDefinition>