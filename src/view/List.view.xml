<mvc:View
        xmlns="sap.m"
        xmlns:mvc="sap.ui.core.mvc"
        xmlns:core="sap.ui.core"
        xmlns:f="sap.f"
        xmlns:smartTable="sap.ui.comp.smarttable"
        xmlns:semantic="sap.m.semantic"
        xmlns:table="sap.ui.table"
        controllerName="com.evorait.evoplan.controller.List">

    <Page id="listPage"
          title="{viewModel>/viewTitle}"
          showFooter="true"
          showHeader="true">

        <f:DynamicPage headerExpanded="true"
                       preserveHeaderStateOnScroll="true"
                       fitContent="true"
                       showFooter="false"
                       toggleHeaderOnTitleClick="false"
                       class="">

            <f:header>
                <f:DynamicPageHeader pinnable="true">
                    <f:content>
                        <core:Fragment fragmentName="com.evorait.evoplan.view.fragments.SmartFilter" type="XML"/>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>

            <f:content>
                <smartTable:SmartTable
                        id="draggableList"
                        height="100%"
                        width="100%"
                        direction="Column"
                        fitContainer="true"
                        enableAutoBinding="true"
                        entitySet="{viewModel>/tableEntity}"
                        smartFilterId="listReportFilter"
                        showRowCount="true"
                        header="{viewModel>/tableTitle}"
                        useExportToExcel="true"
                        useVariantManagement="true"
                        useTablePersonalisation="true">
                    <!-- layout data used to make the table growing but the filter bar fixed -->
                    <smartTable:layoutData>
                        <FlexItemData growFactor="1" />
                    </smartTable:layoutData>
                </smartTable:SmartTable>
            </f:content>

        </f:DynamicPage>

        <footer>
            <OverflowToolbar>
                <Button icon="sap-icon://message-popup" text="{/messagesLength}" type="Emphasized"
                        press="onMessagePopoverPress"/>
                <ToolbarSpacer/>
                <Button text="{i18n>xbut.changeStatus}" icon="sap-icon://flag" press="onChangeStatusButtonPress">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="true" />
                    </layoutData>
                </Button>
                <Button text="{i18n>xbut.assign}" icon="sap-icon://activity-individual" press="onAssignButtonPress">
                    <layoutData>
                        <ToolbarLayoutData shrinkable="true" />
                    </layoutData>
                </Button>
            </OverflowToolbar>
        </footer>

    </Page>
</mvc:View>