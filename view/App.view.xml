<mvc:View
	controllerName="com.evorait.evoplan.controller.App"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:layout="sap.ui.layout"
	xmlns="sap.m"
	displayBlock="true"
	busy="{appView>/busy}"
	busyIndicatorDelay="{appView>/delay}">
	<App id="app"
		 busy="{appView>/busy}"
		 busyIndicatorDelay="{appView>/delay}" >

		<layout:Splitter resize="onResize">
			<NavContainer id="leftPanel" class="panelPage" >
				<layoutData>
					<layout:SplitterLayoutData size="30%" />
				</layoutData>
			</NavContainer>

			<NavContainer id="rightPanel" class="panelPage"/>
		</layout:Splitter>
	</App>
</mvc:View>

