<mvc:View height="100%" 
	controllerName="com.evorait.evoplan.controller.Detail"
	xmlns="sap.m" 
	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core" 
	xmlns:uxap="sap.uxap"
	xmlns:details="com.evorait.evoplan.block.details"
	xmlns:layout="sap.ui.layout">
	
	<Page id="objectPage"
		  class="sapUiNoContentPadding"
		  title="Work Order"
		  navButtonPress="navBack"
		  showNavButton="true">

		<uxap:ObjectPageLayout id="ObjectPageLayout" enableLazyLoading="false" busy="{viewModel>/busy}" busyIndicatorDelay="{viewModel>/delay}" >

			<uxap:headerContent>
				<layout:VerticalLayout>
					<layout:layoutData>
						<uxap:ObjectPageHeaderLayoutData
							showSeparatorAfter="false"/>
					</layout:layoutData>
					<ObjectStatus text="{path: 'SystemStatus', formatter: '.formatter.getStatusText'}"
								  icon="{path: 'SystemStatus', formatter: '.formatter.getStatusIcon'}"
								  visible="{viewModel>/isEdit}" />
				</layout:VerticalLayout>
			</uxap:headerContent>

			<uxap:sections>
				<uxap:ObjectPageSection title="{i18n>@GENERAL}">
					<uxap:subSections>
						<uxap:ObjectPageSubSection>
							<uxap:blocks>
								<details:DetailsFormBlock id="detailsFormBlock" editPress="onFiredEditMode" />
							</uxap:blocks>
						</uxap:ObjectPageSubSection>
					</uxap:subSections>
				</uxap:ObjectPageSection>
			</uxap:sections>
		</uxap:ObjectPageLayout>
		
	</Page>
</mvc:View>