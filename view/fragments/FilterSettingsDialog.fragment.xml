<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <ViewSettingsDialog id="filterViewDialog" title="Filter" confirm="onFilterSettingsConfirm">
        <filterItems>
            <ViewSettingsFilterItem
                    id="viewFilterItem"
                    text="{i18n>xtit.filterTitleView}"
                    key="View"
                    multiSelect="false">
                <items>
                    <ViewSettingsItem text="Daily" key="TIMEDAY" />
                    <ViewSettingsItem text="Weekly" key="TIMEWEEK" />
                    <ViewSettingsItem text="Monthly" key="TIMEMONTH" />
                    <ViewSettingsItem text="Simple" key="TIMENONE" selected="true"/>
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsCustomItem
                    id="idTimeframeFilterItem"
                    text="{i18n>xtit.filterTitleDateRange}"
                    key="TimeFrame">
                <customControl>
                    <VBox class="sapUiSmallMargin">
                        <Label text="{i18n>xtit.filterDateFrom}" labelFor="dateRange1"/>
                        <DatePicker
                                id="dateRange1"
                                class="sapUiSmallMarginBottom"
                                valueFormat="{i18n>dateFormat}"
                                change="onChangeDateRangeFilter"
                                value="{
                                    type : 'sap.ui.model.type.String',
                                    constraints : {
                                        minLength: 1
                                    }
                                }"/>
                        <Label text="{i18n>xtit.filterDateTo}" labelFor="dateRange2"/>
                        <DatePicker
                                id="dateRange2"
                                valueFormat="{i18n>dateFormat}"
                                class="sapUiSmallMarginBottom"
                                change="onChangeDateRangeFilter"/>
                    </VBox>
                </customControl>
            </ViewSettingsCustomItem>

            <ViewSettingsCustomItem
                    id="idGroupFilterItem"
                    text="{i18n>xtit.filterTitleGroup}"
                    key="ResourceGroup">
                <customControl>
                    <MultiInput id="multiGroupInput"
                                width="90%"
                                class="sapUiSmallMargin"
                                change="onChangeGroupFilter"
                                enableMultiLineMode="true"
                                showValueHelp="false">
                    </MultiInput>
                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>

</core:FragmentDefinition>