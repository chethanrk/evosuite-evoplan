<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form">

    <ViewSettingsDialog id="filterViewDialog" title="Filter" confirm="onFilterSettingsConfirm">
        <filterItems>
            <ViewSettingsFilterItem
                    id="viewFilterItem"
                    text="{i18n>xtit.filterTitleView}"
                    key="View"
                    multiSelect="false">
                <items>
                    <ViewSettingsItem text="Daily" key="Daily" />
                    <ViewSettingsItem text="Weekly" key="Weekly" />
                    <ViewSettingsItem text="Monthly" key="Monthly" />
                    <ViewSettingsItem text="Simple" key="Simple" />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsCustomItem
                    id="idTimeframeFilterItem"
                    text="{i18n>xtit.filterTitleDateRange}"
                    key="TimeFrame">
                <customControl>
                    <VBox class="sapUiSmallMargin">
                        <Label text="{i18n>xtit.filterDateFrom}" labelFor="DP1"/>
                        <DatePicker
                                id="DP1"
                                class="sapUiSmallMarginBottom"
                                value="2014-03-26" valueFormat="yyyy-MM-dd"/>
                        <Label text="{i18n>xtit.filterDateTo}" labelFor="DP2"/>
                        <DatePicker
                                id="DP2"
                                value="2014-03-26" valueFormat="yyyy-MM-dd" displayFormat="long"
                                class="sapUiSmallMarginBottom"/>
                    </VBox>
                </customControl>
            </ViewSettingsCustomItem>

            <ViewSettingsCustomItem
                    id="idResourceGroupFilterItem"
                    text="{i18n>xtit.filterTitleGroup}"
                    key="ResourceGroup">
                <customControl>
                    <MultiInput id="multiInput"
                                showValueHelp="true"
                                width="90%"
                                class="sapUiSmallMargin">
                    </MultiInput>
                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>

</core:FragmentDefinition>