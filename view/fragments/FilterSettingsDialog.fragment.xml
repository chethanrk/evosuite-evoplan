<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <ViewSettingsDialog id="filterViewDialog"
                        title="Filter"
                        confirm="onFilterSettingsConfirm"
                        resetFilters="onFilterSettingsReset">
        <filterItems>
            <ViewSettingsFilterItem
                    id="viewFilterItem"
                    text="{i18n>xtit.filterTitleView}"
                    key="View"
                    multiSelect="false">
                <items>
                    <ViewSettingsItem text="{i18n>xfld.viewFilterDaily}" key="TIMEDAY" />
                    <ViewSettingsItem text="{i18n>xfld.viewFilterWeek}" key="TIMEWEEK"/>
                    <ViewSettingsItem text="{i18n>xfld.viewFilterMonth}" key="TIMEMONTH" />
                    <ViewSettingsItem text="{i18n>xfld.viewFilterNone}" key="TIMENONE" />
                </items>
            </ViewSettingsFilterItem>

            <ViewSettingsCustomItem
                    id="idTimeframeFilterItem"
                    text="{i18n>xtit.filterTitleDateRange}"
                    key="TimeFrame">
                <customControl>
                    <VBox class="sapUiSmallMargin">
                        <Label text="{i18n>xtit.filterDateFrom}" labelFor="dateRange1"/>
                        <DatePicker
                                id="dateRange1"
                                class="sapUiSmallMarginBottom"
                                valueFormat="yyyy-MM-dd"
                                change="onChangeDateRangeFilter"
                                value="{
                                    type : 'sap.ui.model.type.String',
                                    constraints : {
                                        minLength: 1
                                    }
                                }"/>
                        <Label text="{i18n>xtit.filterDateTo}" labelFor="dateRange2"/>
                        <DatePicker
                                id="dateRange2"
                                valueFormat="yyyy-MM-dd"
                                class="sapUiSmallMarginBottom"
                                change="onChangeDateRangeFilter"/>
                    </VBox>
                </customControl>
            </ViewSettingsCustomItem>

            <ViewSettingsCustomItem
                    id="idGroupFilterItem"
                    text="{i18n>xtit.filterTitleGroup}"
                    key="ResourceGroup">
                <customControl>
                    <MultiInput id="multiGroupInput"
                                width="90%"
                                class="sapUiSmallMargin"
                                tokenUpdate="onUpdateGroupFilter"
                                showValueHelp="true"
                                startSuggestion="0"
                                showSuggestion="true"
                                filterSuggests="true"
                                valueHelpRequest="onGroupFilterValueHelpRequest"
                                liveChange="onGroupFilterValueChange"
                                enableMultiLineMode="true"
                                suggestionItems="{
                                    path: '/ResourceSet',
                                    sorter: { path: 'ObjectId' },
                                    filters : [
                                        { path : 'ObjectType', operator : 'EQ', value1 : 'RES_GROUP'}
                                    ]
                                }">
				        <core:Item key="{GroupDescription}"
                                   text="{GroupDescription}" />
                    </MultiInput>

                </customControl>
            </ViewSettingsCustomItem>
        </filterItems>
    </ViewSettingsDialog>

</core:FragmentDefinition>