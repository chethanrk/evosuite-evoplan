<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:form="sap.ui.layout.form">

    <Dialog title="{i18n>xtit.assignInfoModalTitle}">
        <content>
            <form:SimpleForm id="assignmentInfoForm"
                          editable="true"
                          layout="ResponsiveGridLayout"
                          labelSpanXL="3"
                          labelSpanL="3"
                          labelSpanM="3"
                          labelSpanS="12"
                          emptySpanXL="4"
                          emptySpanL="4"
                          emptySpanM="4"
                          emptySpanS="0"
                          columnsXL="1"
                          columnsL="1"
                          columnsM="1"
                          singleContainerFullSize="false" >
                <form:content>
                    <Label text="{i18n>xfld.demandName}" />
                    <Text name="Description"
                          text="{Description}"/>
                    <Label text="{i18n>xfld.startDate}" />
                    <DatePicker
                            name="StartDate"
                            valueFormat="yyyy-MM-dd"
                            value="{StartDate}"/>
                    <Label text="{i18n>xfld.endDate}" />
                    <DatePicker
                            name="EndDate"
                            valueFormat="yyyy-MM-dd"
                            value="{EndDate}"/>
                    <Label text="{i18n>xfld.status}" />
                    <ComboBox
                            name="UserStatusShortText"
                            key="{UserStatusShortText}"
                            items="{
                            path: '/StatusTextsSet'
                            }">
                        <core:ListItem key="{UserStatusShortText}"
                                       text="{UserStatusLongText}"/>
                    </ComboBox>
                </form:content>
            </form:SimpleForm>

        </content>

        <beginButton>
            <Button text="{i18n>xbut.buttonClose}" press="onCloseDialog" />
        </beginButton>

        <endButton>
            <Button text="{i18n>xbut.buttonSave}" type="Emphasized" press="onSaveDialog" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>