<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:l="sap.ui.layout"
        xmlns:table="sap.ui.table"
        xmlns:core="sap.ui.core">

    <Dialog title="{i18n>xtit.assignModalTitle}">
        <content>
            <Toolbar>
                <SearchField liveChange="onSearchAssignModal" width="100%" />
            </Toolbar>

            <table:TreeTable id="assignModalTable"
                    selectionMode="Single"
                    enableColumnReordering="false"
                    expandFirstLevel="false"
                    columnHeaderVisible="false"
                    rowSelectionChange="onSelectionChangeAssignModal"
                    rows="{path : '/ResourceHierarchySet'}">

                <table:columns>
                    <table:Column label="Description">
                        <table:template>
                            <Text text="{Description}" wrapping="false" />
                        </table:template>
                    </table:Column>
                </table:columns>
            </table:TreeTable>
        </content>

        <beginButton>
            <Button text="Cancel" press="onAssignModalCancel" />
        </beginButton>

        <endButton>
            <Button text="Ok" press="onAssignModalSave" />
        </endButton>
    </Dialog>

</core:FragmentDefinition>