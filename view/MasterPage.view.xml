<mvc:View controllerName="com.evorait.evoplan.controller.MasterPage"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:semantic="sap.m.semantic"
          xmlns:smartTable="sap.ui.comp.smarttable"
          xmlns:smartVariant="sap.ui.comp.smartvariants"
          xmlns:table="sap.ui.table"
          xmlns:l="sap.ui.layout"
          xmlns:vm="sap.ui.comp.variants"
          xmlns:f="sap.f">

    <Page id="masterPage"
          title="{i18n>masterTitle}"
          showFooter="true"
          showHeader="true"
          icon="sap-icon://action">

        <f:DynamicPage headerExpanded="true"
                       preserveHeaderStateOnScroll="true"
                       fitContent="true"
                       showFooter="false"
                       toggleHeaderOnTitleClick="false"
                       class="tableContentPage">
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <smartVariant:SmartVariantManagement
                                id="treeVariantManagment"
                                persistencyKey="searchListReportVariant"
                                select="onSelectVariant"
                                showShare="true"
                                showSetAsDefault="true"
                                showExecuteOnSelection="true"
                                lifecycleSupport="true">
                        </smartVariant:SmartVariantManagement>
                    </f:heading>
                    <f:actions>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://filter" type="Transparent" press="onFilterButtonPress" />
                    </f:actions>
                </f:DynamicPageTitle>
            </f:title>

            <f:header>
                <f:DynamicPageHeader pinnable="false">
                    <f:content>
                        <SearchField id="searchField"
                                     liveChange="onSearch"
                                     showRefreshButton="{= !${device>/support/touch} }"
                                     width="100%">
                        </SearchField>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>

            <f:content>
                <smartTable:SmartTable
                        id="droppableTable"
                        entitySet="ResourceGroupSet"
                        tableType="TreeTable"
                        useExportToExcel="false"
                        useVariantManagement="false"
                        useTablePersonalisation="false"
                        header="{i18n>masterTitle}"
                        showRowCount="false"
                        enableAutoBinding="true"
                        beforeRebindTable="onBeforeRebindTable"
                        updateFinished="onUpdateFinished"
                        initiallyVisibleFields="ResourceGroupId"
                        toolbarStyleClass="treeTableHeader">
                    <!-- layout data used to make the table growing but the filter bar fixed -->
                    <smartTable:layoutData>
                        <FlexItemData growFactor="1" />
                    </smartTable:layoutData>
                </smartTable:SmartTable>
            </f:content>

        </f:DynamicPage>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <!--<Button icon="sap-icon://filter" press="onFilterButtonPress" />-->
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>