<mvc:View controllerName="com.evorait.evoplan.controller.MasterPage"
          xmlns:core="sap.ui.core"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:layout="sap.ui.layout"
          xmlns:vm="sap.ui.comp.variants"
          xmlns:f="sap.f"
          xmlns:smartVariantManagement="sap.ui.comp.smartvariants"
          xmlns:controls="com.evorait.evoplan.ui.controls">

    <Page id="masterPage"
          title="{i18n>masterTitle}"
          showFooter="true"
          showHeader="true"
          class="sapUiNoContentPadding tableContentPage">

        <f:DynamicPage headerExpanded="true"
                       preserveHeaderStateOnScroll="true"
                       fitContent="true"
                       showFooter="false"
                       toggleHeaderOnTitleClick="false">
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>

                        <controls:CustomSmartVariant
                                id="customVariant"
                                persistencyKey="{viewModel>/persistencyKey}"
                                beforeSave="onBeforeSaveVariant"/>

                        <!--<controls:CustomVariantManagement
                                id="customVariant"
                                select="onSelectVariant"
                                save="onSaveVariant"
                                enabled="true"
                                manage="onManageVariant"
                                showExecuteOnSelection="true"
                                showShare="true"
                                lifecycleSupport="true"
                                persistencyKey="{viewModel>/persistencyKey}">
                            <controls:variantItems>
                                <vm:VariantItem text="Accounts by Name" key="ABN" global="true" readOnly="true" lifecyclePackage="/UIF/LREP_HOME_CONTENT" accessOptions="R"/>
                                <vm:VariantItem text="Accounts by ID" key="ABI" global="true" readOnly="false" lifecyclePackage="/UIF/LREP_HOME_CONTENT" accessOptions="RWD"/>
                            </controls:variantItems>
                        </controls:CustomVariantManagement>-->

                    </f:heading>
                    <f:actions>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://filter" type="Transparent" press="onFilterButtonPress" />
                    </f:actions>
                </f:DynamicPageTitle>
            </f:title>

            <f:header>
                <f:DynamicPageHeader pinnable="false">
                    <f:content>
                        <SearchField id="searchField"
                                     search="onSearch"
                                     showRefreshButton="{= !${device>/support/touch} }"
                                     width="100%">
                        </SearchField>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>

            <f:content>
                <layout:VerticalLayout width="100%" class="listTreeTable" >
                    <Tree id="droppableTable"
                          toggleOpenState="refreshDroppable"
                          updateFinished="refreshDroppable"
                          items="{path: '/ResourceHierarchySet'}">
                        <StandardTreeItem title="{Description}"/>
                    </Tree>
                </layout:VerticalLayout>
            </f:content>

        </f:DynamicPage>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <!--<Button icon="sap-icon://filter" press="onFilterButtonPress" />-->
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>