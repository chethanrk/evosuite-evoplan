<mvc:View controllerName="com.evorait.evoplan.controller.MasterPage"
          xmlns:core="sap.ui.core"
          xmlns="sap.m"
          xmlns:mvc="sap.ui.core.mvc"
          xmlns:layout="sap.ui.layout"
          xmlns:vm="sap.ui.comp.variants"
          xmlns:smartTable="sap.ui.comp.smarttable"
          xmlns:smartVariant="sap.ui.comp.smartvariants"
          xmlns:smartList="sap.ui.comp.smartlist"
          xmlns:f="sap.f">

    <Page id="masterPage"
          title="{i18n>masterTitle}"
          showFooter="true"
          showHeader="true"
          class="sapUiNoContentPadding tableContentPage">

        <f:DynamicPage headerExpanded="true"
                       preserveHeaderStateOnScroll="true"
                       fitContent="true"
                       showFooter="false"
                       toggleHeaderOnTitleClick="false">
            <f:title>
                <f:DynamicPageTitle>
                    <f:heading>
                        <vm:VariantManagement
                                defaultVariantKey=""
                                standardItemText="Standard"
                                showShare="true"
                                showSetAsDefault="true"
                                showExecuteOnSelection="true"
                                lifecycleSupport="true"
                                save="onSaveVariant"
                                select="onSelectVariant"
                                manage="onManageVariant">
                        </vm:VariantManagement>
                    </f:heading>
                    <f:actions>
                        <ToolbarSpacer/>
                        <Button icon="sap-icon://filter" type="Transparent" press="onFilterButtonPress" />
                    </f:actions>
                </f:DynamicPageTitle>
            </f:title>

            <f:header>
                <f:DynamicPageHeader pinnable="false">
                    <f:content>
                        <SearchField id="searchFieldResources"
                                     search="onSearchResources"
                                     showRefreshButton="{= !${device>/support/touch} }"
                                     width="100%">
                        </SearchField>
                    </f:content>
                </f:DynamicPageHeader>
            </f:header>

            <f:content>
                <layout:VerticalLayout width="100%" class="listTreeTable" >
                    <Tree id="droppableTable"
                          toggleOpenState="refreshDroppable"
                          updateFinished="refreshDroppable"
                          items="{path: '/ResourceHierarchySet'}">
                        <CustomTreeItem>
                            <FlexBox alignItems="Start"
                                     justifyContent="SpaceBetween"
                                     width="100%">
                                <items>
                                    <VBox>
                                        <Title level="H3" text="{Description}" />
                                        <Label text="{Utilization}" />
                                    </VBox>
                                    <Text text="{AssignmentCount}" class="sapUiTinyMarginTopBottom sapMH4FontSize" />
                                </items>
                            </FlexBox>
                        </CustomTreeItem>
                    </Tree>
                </layout:VerticalLayout>
            </f:content>

        </f:DynamicPage>

        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <!--<Button icon="sap-icon://filter" press="onFilterButtonPress" />-->
            </OverflowToolbar>
        </footer>
    </Page>
</mvc:View>