<mvc:View 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns="sap.m" 
	controllerName="com.evorait.evoplan.controller.Assets"
	xmlns:controls="com.evorait.evoplan.ui.controls"
	xmlns:u="sap.ui.unified" 
	xmlns:table="sap.ui.table"
	xmlns:f="sap.f"
	xmlns:smartTable="sap.ui.comp.smarttable">
	<Page 
		title="{i18n>xtit.assetTitle}" 
		class="sapUiNoContentPadding tableContentPage" 
        showFooter="true"
        showHeader="true"
		navButtonPress="navBack" 
		showNavButton="true">
		<f:DynamicPage 
			id="idResourcePage" 
			headerExpanded="true" 
			preserveHeaderStateOnScroll="true" 
			fitContent="false" 
			showFooter="false"
			toggleHeaderOnTitleClick="false">
			<f:header>
				<f:DynamicPageHeader pinnable="true">
					<f:content>
						<FlexBox alignItems="Start"
								 justifyContent="SpaceBetween">
							<items>
								<controls:CustomVariantManagement
										id="customAssetVariant"
										select="onSelectVariant"
										initialise="onInitialiseVariant"
										enabled="true"
										showExecuteOnSelection="true"
										showShare="true"
										lifecycleSupport="true"
										persistencyKey="AssetPK"
										entitySet="AssetHierarchySet">
								</controls:CustomVariantManagement>

							</items>
						</FlexBox>
						<SearchField 
							id="searchFieldAsset"
							search="onSearchAsset"
							showRefreshButton="{= !${device>/support/touch} }" 
							width="100%"></SearchField>
					</f:content>
				</f:DynamicPageHeader>
			</f:header>
			<f:content>
				<!--<smartTable:SmartTable
                        id="idAssetTree"
                        height="100%"
                        width="100%"
                        fitContainer="true"
                        enableAutoBinding="true"
                        entitySet="AssetHierarchySet"
                        tableType="TreeTable"
                        showRowCount="true"
                        header="{i18n>xtit.assetTreeTitle}"
                        useExportToExcel="true"
                        useVariantManagement="true"
                        persistencyKey="asset_tree_PK"
                        useTablePersonalisation="true">
                    <smartTable:layoutData>
                        <FlexItemData growFactor="1" />
                    </smartTable:layoutData>
                </smartTable:SmartTable>-->
                
                <table:TreeTable
                        id="idAssetTree"
                        selectionMode="Single"
                        selectionBehavior="RowOnly"
                        enableColumnReordering="false"
                        toolbarStyleClass="treeTableHeader"
                        class="listTreeTable"
                        rowSelectionChange="onSelectionChange"
                    	rows="{
                        		path : '/AssetHierarchySet',
                        		parameters:{
                        			numberOfExpandedLevels:1,
                        			 groupId:'AssetTree'
                        		}
                        }">
                    <table:columns>
                        <table:Column
                                label="{i18n>xtit.tableObject}"
                                name="{i18n>xtit.tableObject}">
                        	<table:template>
                                <controls:CustomTitle
                                        text="{Description}"
										tooltip="{Description}"
                                        icon="{
                                        		path: 'NodeType',
                                            	formatter: '.formatter.getAssetIcon'
                                        }"
                                        />
                            </table:template>
                        </table:Column>
                        <table:Column
                                label="{i18n>xtit.tableCheckbox}"
                                name="{i18n>xtit.tableCheckbox}"
                                minScreenWidth="Tablet"
                                demandPopin="false"
                                width="3rem"
                                hAlign="Middle"
                                class="sapUiNoContentPadding">
                            <table:template>
                                <CheckBox enabled="true"
                                          select="onChangeAsset"
                                          selected="{IsSelected}"/>
                            </table:template>
                        </table:Column>
                         <table:Column
                                label="{i18n>xtit.tableObject}"
                                name="{i18n>xtit.tableObject}"
                                 minScreenWidth="Tablet"
                                demandPopin="true"
                                width="2rem"
                                hAlign="End">
                        	<table:template>
                                <core:Icon src="sap-icon://drill-down" hoverColor="#418ac7" tooltip="{i18n>xtit.showWithChild}" press="onShowWithChildren"/>
                            </table:template>
                        </table:Column>
                        
                    </table:columns>
                </table:TreeTable>
			</f:content>
		</f:DynamicPage>
		<footer>
			<OverflowToolbar>
				<ToolbarSpacer/>
				<Button id="idButtonShoWD" 
						text="{i18n>xbut.showDemands}"
						tooltip="{i18n>xbut.showDemands}"
						press="onShowDemands"
						enabled="false">
					<layoutData>
						<ToolbarLayoutData shrinkable="true"/>
					</layoutData>
				</Button>
				<Button id="idClr" 
						text="{i18n>xbut.clearSelection}"
						tooltip="{i18n>xbut.clearSelection}"
						enabled="false"
						press="onClearSelection">
					<layoutData>
						<ToolbarLayoutData shrinkable="true"/>
					</layoutData>
				</Button>
			</OverflowToolbar>
		</footer>
	</Page>
</mvc:View>