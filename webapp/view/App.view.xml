<mvc:View controllerName="com.evorait.evoplan.controller.App" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
	displayBlock="true" busy="{appView>/busy}" busyIndicatorDelay="{appView>/delay}">
	<App id="idAppControl" busy="{appView>/busy}" busyIndicatorDelay="{appView>/delay}">
		<Page>
			<customHeader>
				<Bar>
					<contentLeft>
						<Image src="{path: '', formatter: '.formatter.getLogoImageLink' }" densityAware="false" height="100%" alt="EvoPlan" id="imageLogo"/>
					</contentLeft>
					<contentMiddle>
						<MenuButton id="idHeaderMenu" text="{appView>/pageTitle}">
							<menu>
								<Menu itemSelected="onSelectMenuButton">
									<items>
										<MenuItem text="{i18n>xbut.pageDemands}"/>
										<MenuItem text="{i18n>xbut.pageAssetManager}" visible="{user>/ASSET_PLANNING_ENABLED}"/>
										<MenuItem text="{i18n>xbut.pageMessageCockpit}" visible="{user>/EMP_ENABLED}"/>
										<MenuItem text="{i18n>xbut.pageGanttChart}" visible="{user>/ENABLE_GANTT}"/>
										<MenuItem text="{i18n>xbut.pageGanttChartSplit}" visible="{user>/ENABLE_GANTT}"/>
										<!--<MenuItem text="{i18n>xbut.pageWeeklyPlanner}"/>-->
									</items>
								</Menu>
							</menu>
						</MenuButton>
					</contentMiddle>
					<contentRight>
						<Button icon="sap-icon://message-popup" text="{= ${MessageModel>/}.length}" visible="{= ${MessageModel>/}.length === 0 ? false : true}"
								type="Emphasized" press="onMessagePopoverPress"/>
						<Button id="idButtonRefresh" icon="sap-icon://refresh" tooltip="{i18n>xtit.infoRefresh}" press="onRefreshBuffer"/>
						<Button id="idButtonAboutDialog" icon="sap-icon://sys-help" tooltip="{i18n>xtit.infoDialogTitle}" press="onIconPress"/>
					</contentRight>
				</Bar>
			</customHeader>
			<content>
				<NavContainer id="appPanel" class="panelPage"/>
			</content>
		</Page>
	</App>
</mvc:View>