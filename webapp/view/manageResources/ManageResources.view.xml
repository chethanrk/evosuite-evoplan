<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns:vbm="sap.ui.vbm" xmlns:vk="sap.ui.vk" xmlns:f="sap.f"
	controllerName="com.evorait.evoplan.controller.manageResources.ManageResources" displayBlock="true" height="100%" xmlns:l="sap.ui.layout"
	xmlns:table="sap.ui.table" xmlns:dnd="sap.ui.core.dnd">
	<Page id="idManageResources" showFooter="true" showHeader="false" class="sapUiContentPadding">
		<content>
			<HBox >
				<!--Evoplan Resources Table Starts Here-->
				<table:TreeTable id="idTableEvoplanResources" rows="{path:'/ResourceHierarchySet', parameters: {arrayNames:['Description']}}"
					selectionMode="None" enableSelectAll="false" ariaLabelledBy="title" class="sapUiSmallMarginEnd" visibleRowCountMode="Auto"
					minAutoRowCount="15">
					<table:extension>
						<OverflowToolbar style="Clear">
							<Title id="idTitleEvoplanResources" text="{i18n>xtit.EvoplanResourceTable} (0)"/>
							<ToolbarSpacer/>
							<Switch class="customSwitchTextFont" id="idCheckRightTechnician" customTextOn="{i18n>xlab.switchCopy}"
								customTextOff="{i18n>xlab.switchMove}" state="true"></Switch>
						</OverflowToolbar>
					</table:extension>
					<table:columns>
						<table:Column sortProperty="Description" filterProperty="Description">
							<Label text="{i18n>xlab.ResourceDescription}"/>
							<table:template>
								<Text text="{Description}" wrapping="false"/>
							</table:template>
						</table:Column>
						<table:Column sortProperty="TOTAL_EFFORT" filterProperty="TOTAL_EFFORT">
							<Label text="Total Effort"/>
							<table:template>
								<Text text="{TOTAL_EFFORT}" wrapping="false"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:dragDropConfig>
						<dnd:DropInfo groupName="moveToEvoplanResources" drop="onDropIntoEvoplanResources"/>
						<dnd:DragDropInfo sourceAggregation="rows" targetAggregation="rows" dropPosition="Between" dragStart="onStartDragEvoplanResources"
							drop="onDropIntoEvoplanResources"/>
					</table:dragDropConfig>
				</table:TreeTable>
				<!--Evoplan Resources Table Ends Here-->
				<!--<VBox justifyContent="Center" class="sapUiTinyMarginBeginEnd">-->
				<!--	<Button class="sapUiTinyMarginBottom" icon="sap-icon://navigation-right-arrow" tooltip="Move to selected" press="moveToTable2"/>-->
				<!--	<Button icon="sap-icon://navigation-left-arrow" tooltip="Move to available" press="moveToTable1"/>-->
				<!--</VBox>-->
				<!--HR Resources Table Starts Here-->
				<table:Table id="idTableHrResources" ariaLabelledBy="title" selectionMode="None" visibleRowCountMode="Auto" minAutoRowCount="15"
					rows="{ path: '/ResourceSet', filters: {path: 'ObjectType', operator: 'EQ', value1: 'RESOURCE'} }" class="sapUiSmallMarginBegin">
					<table:extension>
						<OverflowToolbar style="Clear">
							<Title id="idTitleHrResources" text="{i18n>xtit.HrResourceTable} (0)"/>
						</OverflowToolbar>
					</table:extension>
					<table:columns>
						<table:Column sortProperty="Description" filterProperty="Description">
							<Label text="{i18n>xlab.ResourceDescription}"/>
							<table:template>
								<Text text="{Description}" wrapping="false"/>
							</table:template>
						</table:Column>
					</table:columns>
					<table:dragDropConfig>
						<dnd:DragInfo groupName="moveToEvoplanResources" sourceAggregation="rows" dragStart="onStartDragHrResources"/>
					</table:dragDropConfig>
					<table:rowActionTemplate>
						<table:RowAction>
							<table:RowActionItem type="Navigation" press="onPress" icon="sap-icon://action"></table:RowActionItem>
						</table:RowAction>
					</table:rowActionTemplate>
				</table:Table>
				<!--HR Resources Table Ends Here-->
			</HBox>
		</content>
	</Page>
</mvc:View>