	xmlns:core="sap.ui.core"
	xmlns:l="sap.ui.layout"
	xmlns:f="sap.ui.layout.form">
	<Dialog
		title="{viewModel>/Scheduling/sScheduleDialogTitle}"
		showHeader="true"
		verticalScrolling="false">

		<content>
			<core:Fragment fragmentName="com.evorait.evoplan.view.scheduling.fragments.SchedulingSmartFilter" type="XML"/>
		</content>
		
		<buttons>
			<Button text="{i18n>xbut.buttonOK}" type="Emphasized" press="onPressAddFilterDialog" />
		</buttons>
	</Dialog>
</core:FragmentDefinition>