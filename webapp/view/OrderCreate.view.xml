<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" controllerName="com.evorait.evoplan.controller.OrderCreate"
	xmlns:uxap="sap.uxap" xmlns="sap.m" xmlns:form="sap.ui.layout.form" xmlns:order="com.evorait.evoplan.block.order">
	<uxap:ObjectPageLayout showTitleInHeaderContent="true" showHeaderContent="true" showAnchorBar="false" showFooter="true" isChildPage="true"
		subSectionLayout="TitleOnTop" busyIndicatorDelay="{viewModel>/delay}">
		<uxap:headerContent></uxap:headerContent>
		<uxap:headerTitle>
			<uxap:ObjectPageHeader objectImageURI="sap-icon://create" objectTitle="{AssetDescription}" objectImageShape="Circle"
				isObjectIconAlwaysVisible="false" isObjectTitleAlwaysVisible="false" isObjectSubtitleAlwaysVisible="false" isActionAreaAlwaysVisible="true">
				<uxap:actions>
					<Button text="{i18n>xbut.buttonSave}" tooltip="{i18n>xbut.buttonSave}" type="Emphasized" press="onSaveOrder"/>
					<Button text="{i18n>xbut.buttonCancel}" tooltip="{i18n>xbut.buttonCancel}" type="Default" press="onBack"/>
				</uxap:actions>
				<uxap:breadcrumbs>
					<Breadcrumbs currentLocationText="{i18n>xbut.createOrder}">
						<Link text="{i18n>xtit.assetOrders}" press="onBack"/>
					</Breadcrumbs>
				</uxap:breadcrumbs>
			</uxap:ObjectPageHeader>
		</uxap:headerTitle>
		<uxap:sections>
			<uxap:ObjectPageSection showTitle="true" title="Page Section Title" titleUppercase="true" visible="true">
				<uxap:subSections>
					<uxap:ObjectPageSubSection title="{i18n>xtit.general}" mode="Expanded">
						<uxap:blocks>
							<order:OrderCreateBlock id="idorderCreateB"/>
						</uxap:blocks>
					</uxap:ObjectPageSubSection>
				</uxap:subSections>
			</uxap:ObjectPageSection>
		</uxap:sections>
		<uxap:footer>
			<OverflowToolbar>
				<Button icon="sap-icon://message-popup" text="{= ${MessageModel>/}.length}" visible="{= ${MessageModel>/}.length === 0 ? false : true}"
					type="Emphasized" press="onMessagePopoverPress"></Button>
				<ToolbarSpacer/>
			</OverflowToolbar>
		</uxap:footer>
	</uxap:ObjectPageLayout>
</mvc:View>