<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:f="sap.f"
	xmlns:dnd="sap.ui.core.dnd" xmlns:table="sap.ui.table">
	<smartTable:SmartTable id="idToolsTable" visible="true" width="100%" direction="Column" fitContainer="true"
		enableAutoBinding="true" entitySet="PRTToolSet" smartFilterId="idToolsListFilter" showRowCount="true" header="{i18n>xtit.PRTlistTitle}"
		useExportToExcel="true" useVariantManagement="true" persistencyKey="com.evorait.evosuite.evoplan.ToolsTable" useTablePersonalisation="true"
		requestAtLeastFields="TOOL_ID,TOOL_TYPE,TOOL_DESCRIPTION,TOOL_CATEGORY,TOOL_DIVISION" beforeRebindTable="onBeforeRebindToolsTable">
		<smartTable:layoutData>
			<FlexItemData growFactor="1"/>
		</smartTable:layoutData>
		<smartTable:customToolbar>
			<OverflowToolbar visible="{viewModel>/PRT/bIsGantt}">
				<SegmentedButton selectedKey="{viewModel>/PRT/btnSelectedKey}" selectionChange="handleViewSelectionChange">
					<items>
						<SegmentedButtonItem text="{i18n>xtit.itemListTitle}" key="demands"/>
						<SegmentedButtonItem text="{i18n>xtit.PRTlistTitle}" key="tools"/>
					</items>
				</SegmentedButton>
				<ToolbarSpacer/>
				<Button text="{viewModel>/aFilterBtntextGanttDemandTbl}" press="onPressGanttToolsFilters" icon="sap-icon://filter"/>
			</OverflowToolbar>
		</smartTable:customToolbar>
		<table:Table visibleRowCountMode="Auto">
			<table:dragDropConfig>
				<dnd:DragInfo sourceAggregation="rows" groupName="ToolsView" dragStart="onToolsDragStart" dragEnd="onToolsDragEnd"/>
			</table:dragDropConfig>
		</table:Table>
	</smartTable:SmartTable>
</core:FragmentDefinition>