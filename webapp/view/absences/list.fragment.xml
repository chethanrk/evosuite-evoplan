<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        xmlns:smartList="sap.ui.comp.smartlist">
    <Page id="master"
          title="Products"
          showHeader="false">
        <content>
            <smartList:SmartList id="idResourceAvailList" entitySet="ResourceAvailabilitySet" header="{i18n>xtit.absences}"
                                 showRowCount="true" enableAutoBinding="true"
                                 selectFields="Description,DateFrom,DateTo,ResourceDescription,Guid">
                <smartList:listItemTemplate>
                    <StandardListItem title="{Description}" type="Active"
                                      description="{path : 'DateFrom', type : 'sap.ui.model.odata.type.DateTime'} -
                                {path : 'DateTo', type : 'sap.ui.model.odata.type.DateTime'}" />
                </smartList:listItemTemplate>
                <List itemPress="onClickItem" growing="true" growingThreshold="20" mode="{= ${user>/ENABLE_ABSENCE_DELETE} ? 'Delete' : 'None'}" delete=".onAction($event, 'DELETE')"></List>
            </smartList:SmartList>
        </content>
        <footer>
            <OverflowToolbar>
                <ToolbarSpacer/>
                <Button id="idCreateAbsence" visible="{user>/ENABLE_ABSENCE_CREATE}" text="{i18n>xtit.createUnAvailability}" type="Emphasized" enabled="true"
                        press="onCreateUnAvail"/>
                <Button id="idCreateCancel" text="{i18n>xbut.buttonClose}" press="onClose"/>
            </OverflowToolbar>
        </footer>
    </Page>
</core:FragmentDefinition>