<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        xmlns:smartForm="sap.ui.comp.smartform"
        xmlns:smartField="sap.ui.comp.smartfield">
    <Page id="detail"
          showNavButton="true"
          showHeader="false">
        <smartForm:SmartForm id="idFormAvail"
                             editTogglable="false" editable="true">
            <smartForm:layout>
                <smartForm:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
            </smartForm:layout>
            <smartForm:Group>
                <smartForm:GroupElement >
                    <smartField:SmartField value="{DateFrom}" editable="{user>/ENABLE_ABSENCE_CHANGE}" contextEditable="{user>/ENABLE_ABSENCE_CHANGE}"/>
                </smartForm:GroupElement>
                <smartForm:GroupElement >
                    <smartField:SmartField value="{DateTo}" editable="{user>/ENABLE_ABSENCE_CHANGE}" contextEditable="{user>/ENABLE_ABSENCE_CHANGE}" />
                </smartForm:GroupElement>
                <smartForm:GroupElement>
                    <smartField:SmartField value="{Description}" editable="false" contextEditable="false">
                    </smartField:SmartField>
                </smartForm:GroupElement>
            </smartForm:Group>
        </smartForm:SmartForm>
        <footer>
            <OverflowToolbar>
                <Button id="idBack" text="{i18n>xbut.buttonBack}" press="onNavBack"/>
                <ToolbarSpacer/>
                <Button id="idSaveAvail" text="{i18n>xbut.buttonSave}" visible="{user>/ENABLE_ABSENCE_CHANGE}" type="Emphasized" enabled="true"
                        press=".onAction($event,'SAVE')"></Button>
            </OverflowToolbar>
        </footer>
    </Page>

</core:FragmentDefinition>