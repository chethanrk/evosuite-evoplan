<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns:smartTable="sap.ui.comp.smarttable" xmlns="sap.m">
	<Dialog title="{i18n>xtit.availabiltyDialog}" class="sapUiPopupWithPadding" contentWidth="40%">
		<buttons>
			<Button text="{i18n>xbut.assign}" press="onPressAssignButton" visible="{path:'viewModel>/availabilities/isToAssign'}"/>
			<Button text="{i18n>xbut.buttonClose}" press="onPressCloseButton"/>
		</buttons>
		<content>
			<Table id="idResourceAvailabilitiesTable" class="sapUiNoContentPadding"
				items="{path:'viewModel>/availabilities/data', templateShareable:true}"
				mode="{=${viewModel>/availabilities/isToAssign} === true?'SingleSelectLeft':'None'}">
				<columns >
					<Column>
						<Text text="{/#Resource/DateFrom/@sap:label}"/>
					</Column>
					<Column minScreenWidth="Tablet" demandPopin="true">
						<Text text="{/#Resource/DateTo/@sap:label}"/>
					</Column>
					<core:ExtensionPoint name="TableExtP|Assignments|AssignmentSet|AssignmentListTable|CustomColumn"/>
				</columns>
				<items>
					<ColumnListItem type="Active" press="onClickRow">
						<cells>
							<Text text="{path:'viewModel>StartTimestamp',type:'sap.ui.model.odata.type.DateTimeOffset'}"/>
							<Text text="{path:'viewModel>EndTimestamp',type:'sap.ui.model.odata.type.DateTimeOffset'}"/>
						</cells>
					</ColumnListItem>
				</items>
			</Table>
		</content>
	</Dialog>
</core:FragmentDefinition>