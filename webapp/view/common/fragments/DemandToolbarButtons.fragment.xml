<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
	<Button id="idOverallStatusButton" icon="sap-icon://synchronize" enabled="false" text="{i18n>xtit.materialStatus}" tooltip="{i18n>xtit.refreshTooltip}" visible="{viewModel>/ENABLE_MATERIAL_CHECK}" press="onMaterialStatusPress"/>
	<Button id="materialInfo" text="{i18n>xtit.materialInfoButton}" tooltip="{i18n>xbut.changeStatus}" icon="sap-icon://message-information"
		press="onMaterialInfoButtonPress" enabled="false" visible="{viewModel>/ENABLE_MATERIAL_CHECK}">
		<layoutData>
			<ToolbarLayoutData shrinkable="true"/>
		</layoutData>
	</Button>
	<Button id="changeStatusButton" text="{i18n>xbut.changeStatus}" tooltip="{i18n>xbut.changeStatus}" icon="sap-icon://flag"
		press="onChangeStatusButtonPress" enabled="false" visible="{viewModel>/showStatusChangeButton}">
		<layoutData>
			<ToolbarLayoutData shrinkable="true"/>
		</layoutData>
	</Button>
	<Button id="assignButton" text="{i18n>xbut.assign}" tooltip="{i18n>xbut.assign}" icon="sap-icon://activity-individual"
		press="onAssignButtonPress" enabled="false">
		<layoutData>
			<ToolbarLayoutData shrinkable="true"/>
		</layoutData>
	</Button>
</core:FragmentDefinition>