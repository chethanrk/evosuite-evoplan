<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <Dialog
        title=""
        stretch="false"
        showHeader="false"
        type="Message"
        binding="{progressBarData>/}"
    >
        <content>
            <FlexBox
                height="100%"
                width="100%"
                alignItems="Center"
                justifyContent="Center"
                direction="Column"
            >
                <Title text="{progressBarData>description}" class="sapUiSmallMarginBottom" />
                <ProgressIndicator
                    class="sapUiSmallMarginBottom"
                    percentValue="{progressBarData>progress}"
                    displayValue="{progressBarData>progressDescription}"
                    showValue="true"
                    state="Success"
                    width="20em"
                    height="0.2em"
                />
                <BusyIndicator class="sapUiSmallMarginBottom" size="1em" />
            </FlexBox>
        </content>
    </Dialog>
</core:FragmentDefinition>
