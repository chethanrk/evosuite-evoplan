<core:FragmentDefinition xmlns="sap.m" xmlns:smartTable="sap.ui.comp.smarttable" xmlns:table="sap.ui.table" xmlns:core="sap.ui.core"
	xmlns:dnd="sap.ui.core.dnd">
	<smartTable:SmartTable id="materialInfoTable" entitySet="DemandComponentSet" useExportToExcel="true" useVariantManagement="true"
		useTablePersonalisation="true" header="{i18n>xtit.materialInfoDialogTitle}" showRowCount="true" beforeRebindTable="onBeforeRebindTable"
		enableAutoBinding="true" class="sapUiResponsiveContentPadding" initiallyVisibleFields="Orderid,Matnr,Operationid,Posnr,Matnr,Maktx,Status"
		tableBindingPath="DemandToComponents" tableType="ResponsiveTable">
		<!-- layout data used to make the table growing but the filter bar fixed -->
		<smartTable:layoutData>
			<FlexItemData growFactor="1" baseSize="0%"/>
		</smartTable:layoutData>
		<smartTable:customToolbar>
			<OverflowToolbar>
				<core:ExtensionPoint name="TableExtP|MaterialTable|DemandComponentSet|oolbar|Left"/>
				<ToolbarSpacer/>
				<core:ExtensionPoint name="TableExtP|MaterialTable|DemandComponentSet|Toolbar|Right"/>
			</OverflowToolbar>
		</smartTable:customToolbar>
		<Table>
			<columns>
				<Column>
					<customData>
						<core:CustomData key="p13nData" value='\{"columnKey": "Status", "leadingProperty": "Status", "columnIndex": 0}'/>
					</customData>
					<Label text="{/#Demand/Status/@sap:label}"/>
				</Column>
				<core:ExtensionPoint name="TableExtP|MaterialTable|DemandComponentSet|CustomColumn"/>
			</columns>
			<items>
				<ColumnListItem>
					<cells>
						<ObjectStatus class="sapUiTinyMargin" text="{MATERIAL_STATUS_DESC}"
							icon="{MATERIAL_STATUS_ICON}"
							state="{MATERIAL_STATUS_STATE}"/>
						<core:ExtensionPoint name="TableExtP|MaterialTable|DemandComponentSet|CustomCell"/>
					</cells>
				</ColumnListItem>
			</items>
		</Table>
	</smartTable:SmartTable>
</core:FragmentDefinition>