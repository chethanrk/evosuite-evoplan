<core:FragmentDefinition
        xmlns="sap.ui.table"
        xmlns:core="sap.ui.core"
        xmlns:gnt2="sap.gantt.simple">
	<!-- Background transparent shape (Workaround for the drop on the gantt) -->
            <gnt2:BaseRectangle
					shapeId="{NodeId}"
					scheme="hiddenBackground"
					countInBirdEye="false"
					time="{user>/GANT_START_DATE}"
					endTime="{user>/GANT_END_DATE}"
					connectable="false"
					resizable="false"
					selectable="true"
					draggable= "false"
					showTitle="false"
					fill="transparent"
					fillOpacity="0"
					strokeOpacity="0"
					opacity="0"
					stroke="transparent"
					strokeWidth="0">
				<gnt2:customData>
					<core:CustomData key="type" value="NA" writeToDom="true"></core:CustomData>
				</gnt2:customData>
			</gnt2:BaseRectangle>
</core:FragmentDefinition>