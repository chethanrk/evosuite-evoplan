<core:FragmentDefinition
        xmlns:table="sap.ui.table"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:controls="com.evorait.evoplan.ui.controls">

    <table:Column sortProperty="NodeId" filterProperty="NodeId" label="{i18n>xtit.tableObject}" name="{i18n>xtit.tableObject}" >
        <table:template>
            <controls:CustomTitle text="{Description}" tooltip="{Description}"
                                  titleStyle="{ path: 'NodeType', formatter: '.formatter.formatResourceTitle' }"
                                  availabilityIcon="{ path: 'IS_AVAILABLE', formatter: '.formatter.getAvailabilityIcon' }"
                                  iconColor="{ path: 'IS_AVAILABLE', formatter: '.formatter.formatIconColor' }"
                                  iconTooltip="{ path: 'IS_AVAILABLE', formatter: '.formatter.formatIconTooltip' }"
                                  icon="{ parts:[{path: 'NodeType'},{path: 'StatusIcon'}], formatter: '.formatter.getResourceIcon' }"
                                  isLink="{ path: 'NodeType', formatter: '.formatter.isAssignment' }"
                                  press="onPressAssignmentLink"
                                  isWorkTimeEnabled="{parts:[{path:'viewModel>/capacityPlanning'},{path:'viewModel>/selectedHierarchyView'}], formatter: '.formatter.formatProgressBarVisibility'}"
                                  showWorkTime="{path: 'NodeType', formatter: '.formatter.isResource'}"
                                  workTime="{path:'ACTUAL_WORKING_HOURS',
												  			type:'sap.ui.model.type.Float',
												  			formatOptions:{
												  				'decimals': 1
												  			}}"/>
        </table:template>
    </table:Column>
    <!--<table:Column sortProperty="TOTAL_EFFORT" filterProperty="TOTAL_EFFORT" label="{i18n>xtit.tableWorkload}" name="{i18n>xtit.tableWorkload}"  width="4.5rem"
                  hAlign="End" visible="{= ${/#ResourceHierarchy/Utilization/@sap:visible} === 'true'? true : false }">
        <table:template>
            <Text text="{ganttData>TOTAL_EFFORT}"  wrapping="false"/>
        </table:template>
    </table:Column>
    <table:Column sortProperty="Utilization" filterProperty="Utilization" label="{i18n>xtit.tableWorkload}" name="{i18n>xtit.tableWorkload}"  width="15%"
                  hAlign="End"  visible="{parts:[{path:'viewModel>/capacityPlanning'},{path:'viewModel>/selectedHierarchyView'}], formatter: '.formatter.formatProgressBarVisibility'}">
        <table:template>
            <ProgressIndicator percentValue="{path:'ganttData>Utilization',formatter:'.formatter.formatProgress'}"
                               displayValue="{path:'ganttData>Utilization',
                                                type:'sap.ui.model.type.Float',
                                                formatOptions:{
                                                    'decimals': 1
                                                }}%"
                               tooltip="{ganttData>Utilization}"
                               showValue="true"
                               state="{path:'ganttData>Utilization',formatter:'.formatter.formatProgressState'}"
                               visible="{ path: 'ganttData>NodeType', formatter: '.formatter.isResource' }"/>
        </table:template>
    </table:Column>
    <table:Column sortProperty="CAPACITIVE_EFFORT" filterProperty="CAPACITIVE_EFFORT" label="{i18n>xtit.tableWorkload}" name="{i18n>xtit.tableWorkload}"  width="3.5rem"
                  hAlign="End" visible="{parts:[{path:'viewModel>/capacityPlanning'},{path:'viewModel>/selectedHierarchyView'}], formatter: '.formatter.formatProgressBarVisibility'}">
        <table:template>
            <Link text="{ganttData>CAPACITIVE_EFFORT}" visible="{= ${ganttData>NodeType} === 'ASSIGNMENT' ? false : true }" press="openCapacitivePopup"/>
        </table:template>
    </table:Column>
    <table:Column sortProperty="AssignmentCount" filterProperty="AssignmentCount" label="{i18n>xtit.tableAssignment}" name="{i18n>xtit.tableAssignment}" width="2.5rem"
                  hAlign="End">
        <table:template>
            <Text text="{ganttData>AssignmentCount}" visible="{= ${ganttData>NodeType} === 'ASSIGNMENT' ? false : true }" wrapping="false"/>
        </table:template>
    </table:Column>
    <table:Column sortProperty="IsSelected" filterProperty="IsSelected" label="{i18n>xtit.tableCheckbox}" name="{i18n>xtit.tableCheckbox}" width="2.5rem" class="sapUiNoContentPadding">
        <table:template>
            <CheckBox enabled="true" select="onChangeSelectResource" visible="{ path: 'ganttData>NodeType', formatter: '.formatter.isMainResource' }"
                      selected="{ganttData>IsSelected}"/>
        </table:template>
    </table:Column>-->
</core:FragmentDefinition>