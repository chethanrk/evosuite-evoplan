<core:FragmentDefinition
        xmlns="sap.ui.table"
        xmlns:core="sap.ui.core"
        xmlns:gnt2="sap.gantt.simple">
	<!-- Assignment shape -->
            <gnt2:BaseRectangle
                    shapeId="{ganttModel>ObjectId}"
                    countInBirdEye="true"
                    time="{ganttModel>DateFrom}"
                    height="20"
                    endTime="{ganttModel>DateTo}"
                    title="{ganttModel>Description}"
                    showTitle="true"
                    tooltip="{ganttModel>Description} - {ganttModel>DEMAND_STATUS}"
                    fill="{ganttModel>DEMAND_STATUS_COLOR}"
                    stroke="#7088ac"
                    strokeWidth="1"
                    resizable="{user>/ENABLE_RESIZE}"
                    selectable="true"
                    draggable= "{user>/ENABLE_DRAG_DROP}">
            </gnt2:BaseRectangle>
</core:FragmentDefinition>