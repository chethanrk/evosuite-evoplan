<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<Dialog id="idGanttDemandFilterDialog" title="{i18n>xtit.ganttFilters}" draggable="true">
		<content>
			<!--<HBox class="exPageVariantPadding">-->
			<!--	<smartVariantManagement:SmartVariantManagement id="pageVariantId" persistencyKey="{viewModel>/persistencyKeyGanttDemandFilter}"/>-->
