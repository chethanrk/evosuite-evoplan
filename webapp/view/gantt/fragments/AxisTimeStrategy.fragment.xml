<core:FragmentDefinition
        xmlns="sap.ui.table"
        xmlns:core="sap.ui.core"
        xmlns:axistime="sap.gantt.axistime"
        xmlns:config="sap.gantt.config">

    <axistime:StepwiseZoomStrategy id="idAxisTime" firstDayOfWeek="2">
        <axistime:totalHorizon>
            <config:TimeHorizon
                    startTime="{user>/DEFAULT_GANT_START_DATE}"
                    endTime="{user>/DEFAULT_GANT_END_DATE}"/>
        </axistime:totalHorizon>
       <axistime:visibleHorizon>
            <config:TimeHorizon
                    startTime="{viewModel>/ganttSettings/visibleStartTime}"
                    endTime="{viewModel>/ganttSettings/visibleEndTime}"/>
        </axistime:visibleHorizon>
    </axistime:StepwiseZoomStrategy>

</core:FragmentDefinition>