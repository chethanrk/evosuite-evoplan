<core:FragmentDefinition
        xmlns:table="sap.ui.table"
        xmlns="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:controls="com.evorait.evoplan.ui.controls">

    <table:Column sortProperty="NodeId" filterProperty="NodeId" label="{i18n>xtit.tableObject}" name="{i18n>xtit.tableObject}">
        <table:template>
            <controls:CustomTitle text="{Description}" tooltip="{Description}"
                                  titleStyle="{ path: 'NodeType', formatter: '.formatter.formatResourceTitle' }"
                                  icon="{ parts:[{path: 'NodeType'},{path: 'StatusIcon'},{path: 'ResourceIcon'} ], formatter: '.formatter.getResourceIcon' }"
                                  isWorkTimeEnabled="false"
                                  resourceIconPress="onResourceIconPress"/>
        </table:template>
    </table:Column>
</core:FragmentDefinition>