<core:FragmentDefinition xmlns:table="sap.ui.table" xmlns="sap.m" xmlns:core="sap.ui.core"
	xmlns:controls="com.evorait.evoplan.ui.controls">
	<table:Column sortProperty="ganttModel>NodeId" filterProperty="ganttModel>NodeId" label="{i18n>xtit.tableObject}" name="{i18n>xtit.tableObject}">
		<table:template>
			<controls:CustomTitle text="{ganttModel>Description}" tooltip="{ganttModel>Description}"
				titleStyle="{ path: 'ganttModel>NodeType', formatter: '.formatter.formatResourceTitle' }"
				iconColor="{ path: 'ganttModel>IS_AVAILABLE', formatter: '.formatter.formatIconColor' }"
				icon="{ parts:[{path: 'ganttModel>NodeType'},{path: 'ganttModel>StatusIcon'},{path: 'ganttModel>ResourceIcon'} ], formatter: '.formatter.getResourceIcon' }"
				isLink="{ path: 'ganttModel>NodeType', formatter: '.formatter.isAssignment' }" press="onPressAssignmentLink" resourceIconPress="onResourceIconPress"
				enableQualification="{user>/ENABLE_QUALIFICATION}"
				isWorkTimeEnabled="{parts:[{path:'viewModel>/capacityPlanning'},{path:'viewModel>/selectedHierarchyView'}], formatter: '.formatter.formatProgressBarVisibility'}"
				showWorkTime="{path: 'ganttModel>NodeType', formatter: '.formatter.isResource'}"
				workTime="{path:'ganttModel>ACTUAL_WORKING_HOURS', type:'sap.ui.model.type.Float', formatOptions:{ 'decimals': 1 }}">
			</controls:CustomTitle>
		</table:template>
	</table:Column>
</core:FragmentDefinition>