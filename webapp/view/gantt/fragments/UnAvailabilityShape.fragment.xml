<core:FragmentDefinition xmlns="sap.ui.table" xmlns:core="sap.ui.core" xmlns:gnt2="sap.gantt.simple">
	<!-- To visualize the unavailability of a resource shape -->
	<gnt2:BaseConditionalShape
		activeShape="{parts: [{path: 'ganttModel>AvailabilityTypeGroup'}, {path: 'ganttModel>BlockPercentageColor'}], formatter:'.getAvalablitiyConditionalShape'}">
		<gnt2:shapes>
			<gnt2:BaseRectangle title="{ganttModel>Description}" shapeId="{ganttModel>Guid}_{ganttModel>Counter}" countInBirdEye="false"
				time="{ganttModel>DateFrom}" endTime="{ganttModel>DateTo}" tooltip="{ganttModel>Description}" connectable="false" resizable="false"
				selectable="true" draggable="false" height="25" yBias="-1"
				showTitle="{parts: [{path: 'ganttModel>AvailabilityTypeGroup'}, {path: 'ganttModel>BlockPercentage'}], formatter:'.ganttFormatter.getBlockerTextVisible' }"
				fill="{parts: [{path: 'ganttModel>AvailabilityTypeGroup'}, {path: 'ganttModel>BlockPercentageColor'}], formatter:'.ganttFormatter.getPattern' }"
				fillOpacity="1" strokeOpacity="0" opacity="1" stroke="transparent" strokeWidth="0"/>
			<gnt2:BaseRectangle title="{ganttModel>Description}" shapeId="{ganttModel>Guid}_{ganttModel>Counter}" countInBirdEye="false"
				time="{ganttModel>DateFrom}" endTime="{ganttModel>DateTo}" tooltip="{ganttModel>Description}" connectable="false" resizable="false"
				selectable="true" draggable="false" height="9" yBias="-9"
				showTitle="{parts: [{path: 'ganttModel>AvailabilityTypeGroup'}, {path: 'ganttModel>BlockPercentage'}], formatter:'.ganttFormatter.getBlockerTextVisible' }"
				fill="{parts: [{path: 'ganttModel>AvailabilityTypeGroup'}, {path: 'ganttModel>BlockPercentageColor'}], formatter:'.ganttFormatter.getPattern' }"
				fillOpacity="0.7" strokeOpacity="0" opacity="1" stroke="transparent" strokeWidth="0" rx="4" ry="4"/>
		</gnt2:shapes>
	</gnt2:BaseConditionalShape>
</core:FragmentDefinition>