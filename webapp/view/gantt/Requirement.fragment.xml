<core:FragmentDefinition
        xmlns="sap.ui.table"
        xmlns:m="sap.m"
        xmlns:core="sap.ui.core"
        xmlns:axistime="sap.gantt.axistime"
        xmlns:config="sap.gantt.config"
        xmlns:gnt2="sap.gantt.simple">

    <gnt2:BaseGroup time="{parts: ['StartDate','StartTime','NodeType'],formatter: '.ganttFormatter.getMergedDateObject'}"
                    endTime="{parts: ['EndDate','EndTime','NodeType'],formatter: '.ganttFormatter.getMergedDateObject'}"
                    tooltip="{Description}"
                    resizable="true"
                    selectable="true"
                    draggable= "true">
        <gnt2:shapes>

            <gnt2:BaseRectangle
                    shapeId="{NodeId}"
                    countInBirdEye="true"
                    time="{parts: ['StartDate','StartTime','NodeType'],formatter: '.ganttFormatter.getMergedDateObject'}"
                    endTime="{parts: ['EndDate','EndTime','NodeType'],formatter: '.ganttFormatter.getMergedDateObject'}"
                    resizable="false"
                    selectable="false"
                    draggable= "false"
                    title="{Description}"
                    showTitle="true"
                    tooltip="{Description}"
                    fill="{parts: ['ASSIGNMENT_TYPE','ASSIGNMENT_STATUS','NodeType'],formatter: '.ganttFormatter.fillColor'}"
                    stroke="{parts: ['ASSIGNMENT_TYPE','ASSIGNMENT_STATUS','NodeType'],formatter: '.ganttFormatter.strokeColor'}"
                    strokeWidth="{parts: ['ASSIGNMENT_TYPE','ASSIGNMENT_STATUS','NodeType'],formatter: '.ganttFormatter.strokeWidth'}"/>

            <gnt2:BaseImage src="{ parts:[{path: 'NodeType'},{path: 'StatusIcon'}], formatter: '.formatter.getResourceIcon' }"
                            tooltip="{Description}"
                            height="15"
                            width="15"
                            resizable="false"
                            selectable="false"
                            draggable= "false"
                            xBias="-20"
                            fill="{parts: ['ASSIGNMENT_TYPE','ASSIGNMENT_STATUS','NodeType'],formatter: '.ganttFormatter.strokeColor'}"/>
        </gnt2:shapes>

    </gnt2:BaseGroup>

</core:FragmentDefinition>