<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<Popover id="spotContainer" title="Orders" placement="Auto">
		<content></content>
		<footer>
			<VBox>
				<Button icon="sap-icon://car-rental" text="Show Routes" type="Emphasized" press="onShowRoute" class="sapUiTinyMargin" visible="{user>/ENABLE_MAP_SHOW_ROUTES}"/>
				<Button icon="sap-icon://appointment" text="Plan" type="Emphasized" press="onPlanContextMenu" class="sapUiTinyMargin" visible="{user>/ENABLE_MAP_PLAN}"/>
			</VBox>
		</footer>
	</Popover>
</core:FragmentDefinition>