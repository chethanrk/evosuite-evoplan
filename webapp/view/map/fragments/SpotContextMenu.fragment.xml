<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:u="sap.ui.unified" xmlns:f="sap.ui.layout.form"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<Popover id="spotContainer" placement="Auto">
		<customHeader>
			<HBox justifyContent="Center">
				<core:Icon size="20px" class="sapUiTinyMargin"
					src="{= ${viewModel>/mapSettings/spotContextMenuType} === 'Demand' ? 'sap-icon://customer-order-entry' : 'sap-icon://employee-pane'}"/>
				<Title class="sapUiTinyMargin"
					text="{= ${viewModel>/mapSettings/spotContextMenuType} === 'Demand' ? ${i18n>xtit.contextMenuTitleDemands} : ${i18n>xtit.contextMenuTitleResource}}"/>
			</HBox>
		</customHeader>
		<!--content filled by templating - SpotContextMenu.view.xml-->
		<content></content>
		<footer>
			<VBox>
				<!--show routes button visible in both context menus - Demand and Resource-->
				<Button icon="sap-icon://car-rental" text="{i18n>xbut.showRoutes}" type="Emphasized" press="onShowRoute" class="sapUiTinyMargin"
					visible="{user>/ENABLE_MAP_SHOW_ROUTES}"/>
				<!--Plan button visible only in Demand context menu-->
				<Button icon="sap-icon://appointment" text="{i18n>xbut.plan}" type="Emphasized" press="onPlanContextMenu" class="sapUiTinyMargin"
					visible="{= ${user>/ENABLE_MAP_PLAN} &amp;&amp; ${viewModel>/mapSettings/spotContextMenuType} === 'Demand' }"/>
				<!--Show assignments button visible only in Resource context menu	-->
				<Button icon="sap-icon://activity-individual" text="{i18n>xbut.showAssignments}" type="Emphasized"
					class="sapUiTinyMargin" press="onShowAssignments"
					visible="{= ${user>/ENABLE_MAP_SHOW_ASSIGNMENTS} &amp;&amp; ${viewModel>/mapSettings/spotContextMenuType} === 'Resource' }"/>
			</VBox>
		</footer>
	</Popover>
</core:FragmentDefinition>