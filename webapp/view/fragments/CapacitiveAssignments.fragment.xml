<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">
    <ResponsivePopover
            title="Capacitive Assignments"
            class="sapUiPopupWithPadding"
            placement="Auto"
            contentWidth="35%">
        <endButton>
            <Button text="{i18n>xbut.buttonClose}" press="handleCloseButton" />
        </endButton>
        <content>
            <Table id="idCapacitiveTable"
                   inset="false"
                    items="{
                        path:'/AssignmentSet',
                        templateShareable: true
                   }"
                   itemPress="onCapacitiveRowClick">
                <columns>
                    <Column width="20em">
                        <Text text="{i18n>xtit.assignments}" />
                    </Column>
                    <Column
                            minScreenWidth="Tablet"
                            demandPopin="true">
                        <Text text="{/#Demand/Effort/@sap:label}" />
                    </Column>


                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <Text text="{Description}"/>
                            <Text text="{Effort}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
        </content>
    </ResponsivePopover>
</core:FragmentDefinition>