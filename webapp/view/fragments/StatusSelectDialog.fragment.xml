<core:FragmentDefinition
        xmlns="sap.m"
        xmlns:core="sap.ui.core">

    <Dialog title="{i18n>xtit.selectStatusModalTitle}"
            contentWidth="50%"
            resizable="true"
            class="selectStatusDialog">
        <content>
            <SelectList
                    id="selectStatusList"
                    selectionChange="onSelectionChange"
                    items="{
                        path: '/DemandFunctionsSet',
                        sorter: { path: 'Description' }
                    }">
                <core:Item key="{Function}" text="{Description}" />
            </SelectList>
        </content>

        <buttons>
            <Button text="{i18n>xbut.buttonClose}" press="onCloseDialog" />
            <Button text="{i18n>xbut.buttonSave}" type="Emphasized" press="onSaveDialog" />
        </buttons>
    </Dialog>

</core:FragmentDefinition>