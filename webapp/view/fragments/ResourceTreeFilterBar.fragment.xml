<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartFilterBar="sap.ui.comp.smartfilterbar"
	xmlns:customData="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<smartFilterBar:SmartFilterBar id="resourceTreeFilterBar" class="treeTableFilterBar" persistencyKey="{viewModel>/persistencyKeyTree}"
		considerSelectionVariants="true" entitySet="{viewModel>/treeSet}" enableBasicSearch="false" liveMode="true" filterContainerWidth="15rem"
		showGoOnFB="false" showRestoreButton="false" filterBarExpanded="false" initialized="onInitialized" beforeVariantFetch="onBeforeVariantFetch"
		afterVariantLoad="onAfterVariantLoad" filterChange="onFilterBarChanged" containerQuery="true">
		<smartFilterBar:controlConfiguration>
			<smartFilterBar:ControlConfiguration key="Description" label="{i18n>xtit.search}" visibleInAdvancedArea="true" width="100%" groupId="_BASIC"
				index="0">
				<smartFilterBar:customControl>
					<SearchField showRefreshButton="false" search="onCustomSearchChange" width="100%"></SearchField>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
			<smartFilterBar:ControlConfiguration key="NodeType" label="{i18n>xtit.filterTitleView}" visibleInAdvancedArea="false" mandatory="mandatory"
				width="100%" groupId="_BASIC" index="1">
				<smartFilterBar:customControl>
					<Select width="100%" customData:hasValue="true" change="onChangeTimeView" selectedKey="TIMENONE">
						<core:Item text="{i18n>xfld.viewFilterDaily}" key="TIMEDAY"/>
						<core:Item text="{i18n>xfld.viewFilterWeek}" key="TIMEWEEK"/>
						<core:Item text="{i18n>xfld.viewFilterMonth}" key="TIMEMONTH"/>
						<core:Item text="{i18n>xfld.viewFilterNone}" key="TIMENONE"/>
					</Select>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
			<smartFilterBar:ControlConfiguration key="ResourceGroupGuid" label="{i18n>xtit.filterTitleGroup}" visibleInAdvancedArea="false" width="100%"
				groupId="_BASIC" index="2">
				<smartFilterBar:customControl>
					<MultiComboBox
						items="{ path: '/ResourceSet', sorter: { path: 'ObjectId' }, filters : [ { path : 'ObjectType', operator : 'EQ', value1 : 'RES_GROUP'} ], templateShareable: true }"
						selectionChange="onCustomFilterChange">
						<core:Item key="{ObjectId}" text="{GroupDescription}"/>
					</MultiComboBox>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
			<smartFilterBar:ControlConfiguration key="StartDate" change="onCustomFilterChange" visibleInAdvancedArea="false" width="100%"
				groupId="_BASIC" index="3" mandatory="mandatory">
				<smartFilterBar:customControl>
					<DatePicker width="100%"/>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
			<smartFilterBar:ControlConfiguration key="EndDate" change="onCustomFilterChange" visibleInAdvancedArea="false" width="100%" groupId="_BASIC"
				index="3" mandatory="mandatory">
				<smartFilterBar:customControl>
					<DatePicker width="100%"/>
				</smartFilterBar:customControl>
			</smartFilterBar:ControlConfiguration>
		</smartFilterBar:controlConfiguration>
		<!-- layout data used to make the table growing but the filter bar fixed -->
		<smartFilterBar:layoutData>
			<FlexItemData shrinkFactor="0"/>
		</smartFilterBar:layoutData>
	</smartFilterBar:SmartFilterBar>
</core:FragmentDefinition>