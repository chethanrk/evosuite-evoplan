<core:FragmentDefinition
        xmlns:core="sap.ui.core"
        xmlns="sap.m"
        xmlns:smartForm="sap.ui.comp.smartform"
        xmlns:smartField="sap.ui.comp.smartfield"
        xmlns:smartList="sap.ui.comp.smartlist"
        xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
    <Dialog afterOpen="configureList">
        <content>
            <App id="navCon"
                 initialPage="master">
                <Page id="master"
                      title="Products"
                      showHeader="false">
                    <content>

                        <smartList:SmartList id="idResourceAvailList" entitySet="ResourceAvailabilitySet" header="Absences"
                                             showRowCount="true" showFullScreenButton="true" enableAutoBinding="true"
                                             selectFields="Description,DateFrom,DateTo,ResourceDescription,Guid">
                            <smartList:listItemTemplate>
                                <StandardListItem title="{Description}" type="Active"
                                                  description="{DateFrom} - {DateTo}" />
                            </smartList:listItemTemplate>
                            <List itemPress="onClickItem" mode="Delete" delete=".onAction($event, 'DELETE')"></List>
                        </smartList:SmartList>
                    </content>
                    <footer>
                        <OverflowToolbar>
                            <ToolbarSpacer/>
                            <Button id="idCreateAbsence" text="{i18n>xtit.createUnAvailability}" type="Emphasized" enabled="true"
                            press="onCreateUnAvail"/>

                            <Button id="idCreateCancel" text="{i18n>xbut.buttonClose}" press="onClose"/>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="detail"
                      showNavButton="true"
                      showHeader="false">



                    <smartForm:SmartForm id="idFormAvail"
                                         editTogglable="false" editable="true">
                        <smartForm:layout>
                            <smartForm:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
                        </smartForm:layout>
                        <smartForm:Group>

                            <smartForm:GroupElement >
                            <smartField:SmartField value="{DateFrom}" />
                        </smartForm:GroupElement>
                            <smartForm:GroupElement >
                                <smartField:SmartField value="{DateTo}" />
                            </smartForm:GroupElement>
                            <smartForm:GroupElement>
                                <smartField:SmartField value="{Description}" >
                                </smartField:SmartField>
                            </smartForm:GroupElement>
                        </smartForm:Group>

                    </smartForm:SmartForm>



                    <footer>
                        <OverflowToolbar>

                            <Button id="idBack" text="{i18n>xbut.buttonBack}" press="onNavBack"/>
                            <ToolbarSpacer/>
                            <Button id="idSaveAvail" text="{i18n>xbut.buttonSave}" type="Emphasized" enabled="true"
                                    press=".onAction($event,'SAVE')"></Button>
                        </OverflowToolbar>
                    </footer>
                </Page>
                <Page id="create"
                      showHeader="false">

                    <smartForm:SmartForm id="idCreateFormAvail"
                                         editTogglable="false" editable="true">
                        <smartForm:layout>
                            <smartForm:ColumnLayout columnsM="2" columnsL="3" columnsXL="4"/>
                        </smartForm:layout>
                        <smartForm:Group>

                            <smartForm:GroupElement >
                                <smartField:SmartField value="{DateFrom}" />
                            </smartForm:GroupElement>
                            <smartForm:GroupElement >
                                <smartField:SmartField value="{DateTo}" />
                            </smartForm:GroupElement>
                            <smartForm:GroupElement>
                                <smartField:SmartField value="{Description}">
                                </smartField:SmartField>
                            </smartForm:GroupElement>
                        </smartForm:Group>

                    </smartForm:SmartForm>



                    <footer>
                        <OverflowToolbar>

                            <Button id="idCreateBack" text="{i18n>xbut.buttonBack}" press="onNavBack"/>
                            <ToolbarSpacer/>
                            <Button id="idCreateSaveAvail" text="{i18n>xbut.buttonSave}" type="Emphasized" enabled="true"
                                    press=".onAction($event,'CREATE')"></Button>
                        </OverflowToolbar>
                    </footer>
                </Page>
            </App>
        </content>

    </Dialog>
</core:FragmentDefinition>