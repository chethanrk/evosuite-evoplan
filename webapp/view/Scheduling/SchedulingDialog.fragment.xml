<core:FragmentDefinition
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
	xmlns:f="sap.f"
	xmlns:form="sap.ui.layout.form"
	xmlns:u="sap.ui.unified"
	xmlns:layout="sap.ui.layout">
	<Dialog
		id="SchedulingDialog"
		title="{viewModel>/Scheduling/sScheduleDialogTitle}"
		titleAlignment="Center"
		showHeader="true"
		verticalScrolling="false"
		contentHeight="70%"
		contentWidth="80%">
		<f:DynamicPage
			stickySubheaderProvider="WizardScheduling"
			toggleHeaderOnTitleClick="false"
			class="sapUiNoContentPadding"
			showFooter="true">
			<f:content>
					<Wizard id="WizardScheduling"
						class="sapUiResponsivePadding--header sapUiResponsivePadding--content"
						showNextButton="false"
						navigationChange="handleNavigationChange"
						renderMode="Page">
				
					<WizardStep id="DateRangeStep"
								validated="true"
								title="{i18n>xtit.ReScheFirstStepTitle}"
								icon="sap-icon://appointment"
								>
						<!--Relevent Content to be added later in the next development tickets-->
						<MessageStrip class="sapUiSmallMarginBottom"
								text="Sample Content for Selection of Date"
								showIcon="true"/>
					
						
					</WizardStep>
					<WizardStep id="ConfirmationStep"
								validated="true"
								activate="optionalStepActivation"
								icon="sap-icon://accept"
								title="{i18n>xtit.ReScheSecondStepTitle}">
						<!--Relevent Content to be added later in the next development tickets-->
						<MessageStrip class="sapUiSmallMarginBottom"
								text="Sample Content for Checking the PTV response"
								showIcon="true"/>
					
						
					</WizardStep>
					
				</Wizard>
			</f:content>

			<f:footer>
				<OverflowToolbar>
					<ToolbarSpacer/>
					<Button text="{i18n>xbut.WizardProceed}" type="Emphasized"  visible="{viewModel>/Scheduling/SchedulingDialogFlags/bNextButtonVisible}" press="onDialogNextButton" />
					<Button text="{i18n>xbut.WizardAccept}" type="Emphasized" visible="{viewModel>/Scheduling/SchedulingDialogFlags/bFinishButtonVisible}" press="handleWizardSubmit" />
					<Button	text="{i18n>xbut.WizardCancel}" type="Transparent" press="handleWizardCancel"/>
				</OverflowToolbar>
			</f:footer>
		</f:DynamicPage>
	</Dialog>
</core:FragmentDefinition>