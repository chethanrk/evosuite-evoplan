<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:smartForm="sap.ui.comp.smartform"
	xmlns:smartField="sap.ui.comp.smartfield" xmlns:layout="sap.ui.layout"
	xmlns:app="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1"
	xmlns:template="http://schemas.sap.com/sapui5/extension/sap.ui.core.template/1">
	<List id="ItemsST" showSeparators="None" mode="None">
		<template:repeat list="{path:'facets>'}" var="facets">
			<template:with path="facets>Target" helper="sap.ui.model.odata.AnnotationHelper.resolvePath" var="target">
				<template:with path="target>Data" var="data">
					<template:repeat list="{data>}">
						<CustomListItem>
							<HBox>
								<core:Icon size="1.6rem" src="{path:'data>Org.OData.Core.V1.LongDescription',formatter:'.AH.simplePath'}"
									color="#6a6d70" class="sapUiSmallMarginBegin sapUiTinyMarginTop"/>
								<VBox class="sapUiSmallMarginBegin sapUiTinyMarginTopBottom">
									<Label text="{path:'data>Value',formatter:'com.evorait.evoplan.model.AnnotationHelper.getLabel'}:"/>
									<template:if test="{:= ${data>Value/Path} in ${templateProperties>/navLinks} }">
										<template:then>
											<smartField:SmartField value="{path:'data>Value',formatter:'.AH.simplePath'}"
												name="{path:'data>Value',formatter:'com.evorait.evoplan.model.AnnotationHelper.getSmartFieldName'}" uomEditable="false"
												press="onPressSmartField" url="{data>Value/Path}" editable="false" contextEditable="false">
												<smartField:configuration>
													<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId" preventInitialDataFetchInValueHelpDialog="false"/>
												</smartField:configuration>
											</smartField:SmartField>
										</template:then>
										<template:else>
											<smartField:SmartField value="{path:'data>Value',formatter:'.AH.simplePath'}"
												name="{path:'data>Value',formatter:'com.evorait.evoplan.model.AnnotationHelper.getSmartFieldName'}" uomEditable="false" editable="false"
												contextEditable="false">
												<smartField:configuration>
													<smartField:Configuration controlType="auto" displayBehaviour="descriptionAndId" preventInitialDataFetchInValueHelpDialog="false"/>
												</smartField:configuration>
											</smartField:SmartField>
										</template:else>
									</template:if>
								</VBox>
							</HBox>
						</CustomListItem>
					</template:repeat>
				</template:with>
			</template:with>
		</template:repeat>
	</List>
</core:FragmentDefinition>