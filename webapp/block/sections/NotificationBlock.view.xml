<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
		  xmlns:smartField="sap.ui.comp.smartfield" xmlns:smartForm="sap.ui.comp.smartform"
		  xmlns:forms="sap.ui.layout.form"
		  xmlns:core="sap.ui.core">
	<smartForm:SmartForm id="smartForm" >
		<smartForm:layout>
				<smartForm:Layout 
					labelSpanXL="3"
					labelSpanL="5"
					labelSpanM="5"
					labelSpanS="12"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="2"></smartForm:Layout>
			</smartForm:layout>
				<smartForm:Group>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTIFICATION}" editable="false" /> 
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTIFICATION_DESC}" editable="false"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTIFICATION_PLANT}" editable="false"/>
					</smartForm:GroupElement>
				</smartForm:Group>
				<smartForm:Group>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTIFICATION_WORKCENTER}" editable="false"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTIFICATION_DATE}" editable="false"/>
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{NOTIFICATION_TIME}" editable="false"/>
					</smartForm:GroupElement>
				</smartForm:Group>
			</smartForm:SmartForm>
	</mvc:View>