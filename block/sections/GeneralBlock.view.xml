<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
		  xmlns:smartField="sap.ui.comp.smartfield" xmlns:smartForm="sap.ui.comp.smartform"
		  xmlns:forms="sap.ui.layout.form"
		  xmlns:core="sap.ui.core">
	
	<forms:SimpleForm labelSpanL="3" labelSpanM="3"
					  labelSpanS="3" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  maxContainerCols="2"
					  layout="ResponsiveLayout"
					  width="100%">
		<core:Title text="General"></core:Title>
		
		<smartField:SmartLabel labelFor="idODemandDesc" />
		<smartField:SmartField value="{DemandDesc}" id="idODemandDesc" editable="false"> 
		<smartField:configuration>
						<smartField:Configuration controlType="auto" displayBehaviour="auto"/>
					</smartField:configuration>
		</smartField:SmartField>
		
		<smartField:SmartLabel labelFor="idODemandExtkey" />
		<smartField:SmartField value="{ExtKey}" id="idODemandExtkey" editable="false"/>
		
		<smartField:SmartLabel labelFor="idOSource" />
		<smartField:SmartField value="{Source}" id="idOSource" editable="false"/>
		
		<smartField:SmartLabel labelFor="idOStatus" />
		<smartField:SmartField value="{UserStatusLongText}" id="idOStatus" editable="false"/>
						
	</forms:SimpleForm>
	</mvc:View>