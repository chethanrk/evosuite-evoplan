		  xmlns="sap.m"
		  xmlns:smartField="sap.ui.comp.smartfield" 
		  xmlns:smartForm="sap.ui.comp.smartform"
		  xmlns:core="sap.ui.core">
	<smartForm:SmartForm id="smartForm" >
			<smartForm:layout>
				<smartForm:Layout labelSpanXL="3"
					labelSpanL="5"
					labelSpanM="5"
					labelSpanS="12"
					emptySpanXL="0"
					emptySpanL="0"
					emptySpanM="0"
					emptySpanS="0"
					columnsXL="2"
					columnsL="2"
					columnsM="2"></smartForm:Layout>
			</smartForm:layout>
				<smartForm:Group>
					<smartForm:GroupElement>
						<smartField:SmartField value="{DateFrom}" /> 
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{TimeFrom}" />
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{EFFORT}" />
					</smartForm:GroupElement>
				<!--	<smartForm:GroupElement>
						<smartField:SmartField value="{TimeTo}" />
					</smartForm:GroupElement>-->
				</smartForm:Group>
				<smartForm:Group>
					<!--<smartForm:GroupElement>
						<smartField:SmartField value="{DateFrom}" /> 
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{TimeFrom}" />
					</smartForm:GroupElement>-->
					<smartForm:GroupElement>
						<smartField:SmartField value="{DateTo}" />
					</smartForm:GroupElement>
					<smartForm:GroupElement>
						<smartField:SmartField value="{TimeTo}" />
					</smartForm:GroupElement>
				</smartForm:Group>
				
			</smartForm:SmartForm>
	</mvc:View>