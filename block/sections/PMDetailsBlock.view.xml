<mvc:View xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:layout="sap.ui.layout"
		  xmlns:smartField="sap.ui.comp.smartfield" xmlns:smartForm="sap.ui.comp.smartform"
		  xmlns:forms="sap.ui.layout.form"
		  xmlns:core="sap.ui.core">
	
	<forms:SimpleForm labelSpanL="3" labelSpanM="3"
					  labelSpanS="3" emptySpanL="0" emptySpanM="0" emptySpanS="0"
					  maxContainerCols="2"
					  layout="ResponsiveLayout"
					  width="100%">
		<core:Title text="General"></core:Title>
		
		<smartField:SmartLabel labelFor="idOOrder" />
		<smartField:SmartField value="{ORDERID}" id="idOOrder" editable="false"> 
		</smartField:SmartField>
		
		<smartField:SmartLabel labelFor="idOOrderDesc" />
		<smartField:SmartField value="{ORDER_DESC}" id="idOOrderDesc" editable="false"/>
		
		<smartField:SmartLabel labelFor="idOOperation" />
		<smartField:SmartField value="{OPERATIONID}" id="idOOperation" editable="false"/>
		
		<smartField:SmartLabel labelFor="idOSubOperation" />
		<smartField:SmartField value="{SUBOPERATIONID}" id="idOSubOperation" editable="false"/>
		
		<smartField:SmartLabel labelFor="idOOperationDesc" />
		<smartField:SmartField value="{OPERATION_DESC}" id="idOOperationDesc" editable="false"/>
						
	</forms:SimpleForm>
	</mvc:View>